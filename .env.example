# Database Configuration
MONGODB_URI=mongodb://localhost:27017/zenith-frame-app

# Server Configuration  
PORT=5000
NODE_ENV=development

# Authentication
SECRET_KEY=your-secret-key-here
ADMIN_TOKEN=your-admin-token-here

# CORS Configuration
CORS_ORIGIN=*
CORS_ALLOW_CREDENTIALS=false

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret_here

# Public base URL for serving uploaded assets (optional). If set, the API will
# prepend this value to `image` paths so frontends can load images from tunnels
# or production domains. Example for dev tunnel:
# PUBLIC_BASE_URL=https://s7q5nl38-5000.inc1.devtunnels.ms